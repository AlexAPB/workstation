[user]
	name = Alex Peats-Bond
	email = alexpb.tgm@gmail.com
[core]
	editor = emacs
	hooksPath = /Users/apeatsbond/.git-hooks
	excludesfile = /Users/apeatsbond/.gitignore_global
[credential]
	helper = osxkeychain
[branch]
	autosetuprebase = always
[rerere]
	enabled = true
[alias]
	co = checkout
	
	cm = commit -m
	cmend = commit --amend
	wip = commit -am "wip"
	wip-untracked = !sh -c 'git add -A && git commit -m wip'

	br = branch
	cbr = rev-parse --abbrev-ref HEAD
	
	st = status
	stp = stash pop
	std = stash drop stash@{0}

	feature-OD = diff origin/dev...HEAD
	feature-OM = diff origin/master...HEAD

	chp = cherry-pick
	sha = rev-parse HEAD

	fo = fetch -p origin
	fom = fetch -p origin master:master
	fod = fetch -p origin dev:dev

	lg = log --pretty='%h  %Cred%<(12)%ar  %Cgreen%<(16)%an  %Cblue %s'

	pom = pull origin master
	pod = pull origin dev

	rb = rebase
	rbi = rebase -i
	rbom = rebase origin/master
	rbomi = rebase -i origin/master
	rbod = rebase origin/dev
	rbodi = rebase -i origin/dev
	rbc = rebase --continue

[include]
	path = ~/.gitconfig_local

[fetch]
	writeCommitGraph = true
[protocol]
	version = 2
